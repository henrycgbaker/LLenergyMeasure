{
  "name": "LLM Energy Measure",
  "build": {
    "dockerfile": "../Dockerfile",
    "target": "dev"
  },
  "containerEnv": {
    "HF_TOKEN": "${localEnv:HF_TOKEN}",
    "HF_HOME": "/app/.cache/huggingface",
    "PYTHONUNBUFFERED": "1"
  },
  "mounts": [
    "source=${localEnv:HOME}/.cache/huggingface,target=/app/.cache/huggingface,type=bind"
  ],
  "remoteUser": "vscode",
  "updateRemoteUserUID": true,
  "onCreateCommand": "sudo chown -R $(id -u):$(id -g) /opt/venv",
  "postCreateCommand": {
    "install-package": "pip install -e '.[pytorch,dev]'",
    "pre-commit": "pre-commit install || echo 'pre-commit install skipped (configure git user first)'"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "tamasfe.even-better-toml"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/opt/venv/bin/python",
        "python.terminal.activateEnvironment": false,
        "python.formatting.provider": "none",
        "editor.formatOnSave": true,
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff"
        }
      }
    }
  }
}
